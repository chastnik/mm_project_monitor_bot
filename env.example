# Конфигурация бота для проверки планов в Jira

# Настройки Mattermost
MATTERMOST_URL=https://your-mattermost-server.com
MATTERMOST_TOKEN=your_bot_token_here
MATTERMOST_BOT_USERNAME=standup-bot
MATTERMOST_CHANNEL_ID=channel_id_for_reports

# Настройки Jira (on-premise)
JIRA_URL=https://jira.your-company.com
JIRA_USERNAME=your_jira_username
# Для новых версий Jira Server (с API токенами):
JIRA_API_TOKEN=your_jira_api_token
JIRA_AUTH_METHOD=token
# Для старых версий on-premise Jira (с паролем):
# JIRA_PASSWORD=your_jira_password
# JIRA_AUTH_METHOD=password
# Проверка SSL сертификатов (false для самоподписанных)
JIRA_VERIFY_SSL=true

# Настройки Tempo API
TEMPO_API_TOKEN=your_tempo_api_token
# Для Tempo Cloud:
TEMPO_API_URL=https://api.tempo.io/core/3
# Для on-premise Tempo (замените на ваш URL):
# TEMPO_API_URL=https://tempo.your-company.com/rest/tempo-timesheets/4
TEMPO_VERIFY_SSL=true

# База данных
DATABASE_PATH=standup_bot.db

# Администраторы (email адреса через запятую)
ADMIN_EMAILS=admin1@company.com,admin2@company.com

# Расписание проверки (время в формате HH:MM)
CHECK_TIME=12:00

# Часовой пояс
TIMEZONE=Europe/Moscow

# Логирование
LOG_LEVEL=INFO
LOG_FILE=standup_bot.log
